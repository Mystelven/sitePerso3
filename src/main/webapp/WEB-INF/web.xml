<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xmlns="http://java.sun.com/xml/ns/javaee" 
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
         id="WebApp_ID" 
         version="2.5">
    <display-name>Personal Website of Valentin Montmirail</display-name>

    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsf</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsf</location>
    </error-page>

    <servlet>
        <servlet-name>ContactServlet</servlet-name>
        <servlet-class>com.polytech.mystelven.servlet.ContactServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SiteMapServlet</servlet-name>
        <servlet-class>com.polytech.mystelven.servlet.SiteMapServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RobotsServlet</servlet-name>
        <servlet-class>com.polytech.mystelven.servlet.RobotsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.polytech.mystelven.servlet.HomeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CvServlet</servlet-name>
        <servlet-class>com.polytech.mystelven.servlet.CvServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ResearchServlet</servlet-name>
        <servlet-class>com.polytech.mystelven.servlet.ResearchServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RecarServlet</servlet-name>
        <servlet-class>com.polytech.mystelven.servlet.RecarServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>TeachingServlet</servlet-name>
        <servlet-class>com.polytech.mystelven.servlet.TeachingServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ScientificProductionServlet</servlet-name>
        <servlet-class>com.polytech.mystelven.servlet.ScientificProductionServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ViewScientificProductionServlet</servlet-name>
        <servlet-class>com.polytech.mystelven.servlet.ViewScientificProjectServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>GpgServlet</servlet-name>
        <servlet-class>com.polytech.mystelven.servlet.GpgServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ContactServlet</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SiteMapServlet</servlet-name>
        <url-pattern>/sitemap.xml</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SiteMapServlet</servlet-name>
        <url-pattern>/Sitemap.xml</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RobotsServlet</servlet-name>
        <url-pattern>/robots.txt</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CvServlet</servlet-name>
        <url-pattern>/curriculum-vitae</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ResearchServlet</servlet-name>
        <url-pattern>/research</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RecarServlet</servlet-name>
        <url-pattern>/recar</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TeachingServlet</servlet-name>
        <url-pattern>/teaching</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ScientificProductionServlet</servlet-name>
        <url-pattern>/scientific-production</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ViewScientificProductionServlet</servlet-name>
        <url-pattern>/viewScientificProject</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>GpgServlet</servlet-name>
        <url-pattern>/GpgKey</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>PageExpiryFilter</filter-name>
        <filter-class>com.polytech.mystelven.servlet.PageExpiryFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>PageExpiryFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>